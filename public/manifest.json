{
  "manifest_version": 3,
  "name": "Veil",
  "version": "0.1.0",
  "description": "Non-custodial privacy layer for Solana payments.",
  "icons": {
    "16": "veil.png",
    "48": "veil.png",
    "128": "veil.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "veil.png",
      "48": "veil.png",
      "128": "veil.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
