{
  "name": "veil-extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@veil/extension & npm run dev --workspace=@veil/web",
    "dev:extension": "npm run dev --workspace=@veil/extension",
    "dev:web": "npm run dev --workspace=@veil/web",
    "build": "npm run build --workspaces",
    "build:extension": "npm run build --workspace=@veil/extension",
    "build:web": "npm run build --workspace=@veil/web",
    "lint": "npm run lint --workspaces",
    "lint:extension": "npm run lint --workspace=@veil/extension",
    "lint:web": "npm run lint --workspace=@veil/web",
    "install:all": "npm install",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist packages/*/.env.local"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
